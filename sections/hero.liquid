{% style %}

  .hero_image_container {
  display: flex;
  justify-content: center; 
  flex-direction:column;
  align-items: center; 
  max-width: 3000px;
  width: 100%;
  z-index: 1;
  background-color: {{ section.settings.hero_background_color }};
  flex-wrap: wrap;
  }
  .hero-image {
    width: 100%;
  }
  .text-container {
  z-index: 2;
  position: absolute;
  word-wrap: break-word;
  overflow-wrap: break-word;
  padding-right: 5%;
  padding-left: 5%;
  
  max-width: 100vw;
  }

  .heading-hero,
  .para-hero {
    z-index: 3;
    justify-content: center;
    align-items: center;
    text-align: {{ section.settings.hero_text_alignment }};
  }
  .heading-hero {
    color:{{ section.settings.hero_heading_color }};
  
    font-size: {{ section.settings.font_size_hero | append: 'em' }};
  }
  .para-hero {
    color: {{ section.settings.hero_text_color }}; 
    font-size: {{ section.settings.font_size_para | append: 'em' }};
    font-weight:400;
}
  
  .hero_button_link,
  .hero_button_label, 
  .buttons-container,
  .hero-button {
    z-index: 2;
    color: white;
    border: dotted dashed solid double;
    background-color: {{ block.settings.hero_button_background }};
    text-align: {{ block.settings.button_alignment }};
    font-size: {{ section.settings.font_size_button | append: 'em' }};
    
  }
  h1, h2, h3 {
    text-transform: uppercase; 
    letter-spacing: 1px;
    font-weight: 400;
    margin-bottom: 20px;
    
  }
{% endstyle %}
{% if section.settings.hero_image != blank %}
  <div class="hero_image_container"> 
    <img src="{{ section.settings.hero_image | img_url: '3000X3000'}}" alt="hero-image" class="hero-image">
    
    <div class="text-container">
      {% for block in section.blocks %}
        {% if block.type == 'text' %}
          <h2 class="heading-hero">{{ block.settings.hero_title }}</h2>
        {% elsif block.type == 'rich_text' %}
          <p class="para-hero">{{ block.settings.hero_description }}</p>
        {% endif %}
      {% endfor %}
    
      <div class="buttons-container">
    {% for block in section.blocks %}
      {% if block.type == 'button' %}
        <div class="hero-button" style="text-align: {{ block.settings.button_alignment }};">
          <a href="{{ block.settings.hero_button_link }}">
            {{ block.settings.hero_button_label }}
          </a>
    </div>
        </div>
      {% endif %}
    {% endfor %}
  </div> 
     </div>
{% endif %}

