
{% style %}
    .header-logo img {
   display: block; 
   max-width: {{ section.settings.logo_width }}px;
   height: auto; 
    }
 

  @media screen and (max-width: 600px) {
    body {
      
    }
  }
  
    header-nav-overlay.active {
    display: block; /* Show when active */
  }
  .header-flex {
    display: flex;
    justify-content:space-between;
    align-content:center;
  }
  .header-nav-overlay {
    display: none;
    position: fixed; 
    top: 0; 
    left: 0; 
    right: 0; 
    bottom: 0; 
    background: rgba(0,0,0,0.7);
    }
  .header-nav {
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    overflow: auto;
    background: var(--bg);
    width: 90%;
    max-width: 300px;
    z-index: 10;
    transform: translateX(-100%);
    transition: 0.4s transform; 
  }
  
  li {
    list-style: none;
  }
  .header-nav-anchor {
    display: block; 
    padding:20px;
    color: var(--textColor);
  }
  {% endstyle %}
  <div class="width">
    <div class="header-flex">
      <a href="/" class="header-logo">
        {{ section.settings.logo | image_url: width: 200 | image_tag }}
      </a>
  
   
      
        <a href="/collections/modern-elegance-mens-collection" class="header-hamburger-bar">Men</a> 
        <a href="/collections/timeless-chic-womens-collection" class="header-hamburger-bar">Woman</a> 
        <a href="/" span class="header-hamburger-bar">Home</span></a> 
   
    </div>

      <p style="color: {{ settings.color_schemes.text }};"></p>
      <ul class="header-nav">
        {% for link in section.settings.navigation.links %}
          <li class="header-nav-item">
            <a class="header-nav-anchor" href="{{ link.url }}">
              {{ link.title }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
    <div class="header-nav-overlay"></div>
  
  
      
            {% schema %}
              {
                "name": "Header",
                "tag": "header",
                "class": "header",
                "enabled_on": {
                "groups": ["header"]
               },
                "settings": [
                  {
                    "type": "image_picker",
                    "id": "nav_logo",
                    "label": "logo"
                  }, {
                    "type": "range",
                    "id": "nav_logo_width",
                    "label": "logo_width",
                    "default": 100,
                    "min": 20,
                    "max": 300,
                    "step": 5
                  }
                ],
                          "presets": [
                           {
                         "name": "Nav bar",
                         "category": "Image"
                          }
                                     ]
            }
            
            
            {% endschema %}
  