{% javascript %}
  document.addEventListener('DOMContentLoaded', function () {
    const swiper = new Swiper('.swiper', {
      direction: 'horizontal',
      loop: true,
      pagination: {
        el: '.swiper-pagination',
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      scrollbar: {
        el: '.swiper-scrollbar',
      },
    });
  });
  {% endjavascript %}



<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" defer></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
{{ 'product-card.css' | asset_url | stylesheet_tag }}
<!-- Slider main container -->
<div class="swiper">
  <!-- Additional required wrapper -->
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
      <div class="swiper-slide">
        <img src="{{ block.settings.product_slider_image | img_url: '1200x400' }}" alt="{{ block.settings.product_slider_title }}">
      </div>
    {% endfor %}
  </div>

  <!-- If we need pagination -->
  <div class="swiper-pagination"></div>

  <!-- If we need navigation buttons -->
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>

  <!-- If we need scrollbar -->
  <div class="swiper-scrollbar"></div>
</div>

{%  style  %}  
  .swiper {
    width: {{ section.settings.image_size_slider }}%;
    height: auto;
  } 
  {% endstyle %} 

 
{% schema %}
{
  "name": "Product slider",
  "settings": [  {
        "type": "range",
        "id": "image_size_slider",
          "min": 10,
          "max": 100,
          "step": 10,
          "unit": "%",
          "label": "image size",
          "default": 100
        },],
  "blocks": [
    {
      "type": "multicolumn_section",
      "name": "Multicolumn Section",
      "settings": [
        {
          "type": "image_picker",
          "label": "Select Image",
          "id": "product_slider_image"
        },
        {
          "type": "text",
          "label": "Title",
          "id": "product_slider_title"
        },
        {
          "type": "url",
          "label": "Link",
          "id": "link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}
