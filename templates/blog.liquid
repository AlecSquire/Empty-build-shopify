<h1>{{ blog.title }}</h1>
{% paginate blog.articles by 20 %}

{% for article in blog.articles %}
  <h2>{{ article.title | link_to: article.url }}</h2>
  <p>{{ article.author }}</p>
  <div>
    <p>{{ article.excerpt }}</p>
    <img src="{{ article.image | img_url: '200x200' }}" alt="{{ article.title }}">
  </div>
  <p>{{ article.content }}</p>
  {{ paginate | default_pagination }}
 
{% endpaginate %}
{% endfor %}