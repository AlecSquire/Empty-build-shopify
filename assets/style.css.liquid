:root {
  --fadeoff: left 0s 0.4s, opacity 0.4s;
  --fadeon: left 0s, opacity 0.4s;
  --bp:960px;
  --page_width: {{ settings.page_width }}px;
  --backgroundColor: {{ settings.background_color }};
  --textColor: {{ settings.textColor }}; 
  --linkColor: {{ settings.linkColor }};
  color: {{ section.settings.color_schemes.text }};
  background-color: {{ section.settings.color_schemes.background }} 
}
/* 
Light Pink (#FFF1F1)
Warm Gray (#E0E0E0)
Charcoal Gray (#606060)
Vibrant Coral (#FF6E6E)
lighter-purple #DCC0E6
dark purple #C8A2C8
*/

.width {
  max-width: var(--page_width);
  width: calc(100% - 40px);
  

}
/*
reset 
*/
* {
  margin:0;
  padding:0;
  box-sizing:border-box;
}
img svg {
  display: block;
  width:100%;
}
/* 
header 
*/
 .header-logo {
  display: block;
 }
header {
  text-align: center;
}
@media (min-width: 960px) {
  .width {
    width: calc(100% - 80px);
  }
}
.nav-bar {
  display: flex;
  align-content: space-around;
  justify-content: space-around;
}

.header-hamburger {
  width: 32px;
  display: block;
  margin: 0 auto;
}

.header-hamburger-bar {
  height: 2px;
  width: 100%;
  background: var(--textColor);
  display:block;
  border-radius:2px;
}

.header-hamburger-bar + .header-hamburger-bar {
  margin-top: 5px;
}

button,
input,
select,
textarea {
  outline: none;
  border: none;
  background: transparent;
  -webkit-appearance: none;
  -moz-appearance: none;
  -ms-appearance: none;
  -o-appearance: none;
  appearance: none;
} 

a {
  color: var(--linkColor);
  text-decoration: none;
  transition: color 0.3s ease;

}

a:hover {
  color: #fff;
}

 body {
  background: var(--backgroundColor);
  color: var(--textColor);
} 
.image_with_text_image  {
  display: flex;
  justify-content:space-between;
  align-content:center;
  z-index: 3;
}
.image_with_text_image .text-overlay {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white; 
  z-index: 5;
}
.header-nav-overlay.active {
  display: block; /* Show when active */
}
.header-flex {
  display: flex;
  justify-content:space-between;
  align-content:center;
}
.header-nav-overlay {
  display: none;
  position: fixed; 
  top: 0; 
  left: 0; 
  right: 0; 
  bottom: 0; 
  background: rgba(0,0,0,0.7);
  }
.header-nav {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  overflow: auto;
  background: var(--bg);
  width: 90%;
  max-width: 300px;
  z-index: 10;
  transform: translateX(-100%);
  transition: 0.4s transform; 
}
.header-nav-item {
  border-bottom: 1px solid black ;
}
li {
  list-style: none;
}
.header-nav-anchor {
  display: block; 
  padding:20px;
  color: var(--textColor);
}

.para-color, a {
  color: {{ section.settings.body_text }} !important;
}

h1 h2 h3 {
   text-transform: uppercase; 
   letter-spacing:1px;
   font-weight:400;
   margin-bottom: 20px;

}