body {

  font-family: 'Helvetica', sans-serif;
  margin: 0;
  padding: 0;
}
  .cart-empty {
    width:600;
  }

header
  {
  
    text-align: center;
}
.nav-bar {
  display: flex;
  align-content:space-around;
  justify-content:space-around;

}
.logo {
  width: 12rem;
}

h1 {
  color: grey;
  font-size: 2em;
  margin: 0;
}

main {
  padding: 2em;
}

p {
  line-height: 1.6;
}

a {
  color: grey;
  text-decoration: none;
  transition: color 0.3s ease;
}

a:hover {
  color: #fff;
}

footer {
  background-color: #333;
  color: #6c757d;
  padding: 1em;
  text-align: center;
  position: fixed;
  bottom: 0;
  width: 100%;
}
.product-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
  padding: 20px;
  max-width: 1200px;
  margin: 0 auto;
}
.collection-item{
  display: flex;
 align-content:center;
 justify-content:center;
  gap: 20px;
  padding: 20px;
  max-width: 1200px;
  border: 1px solid #ddd;
  border-radius:2;
  padding: 20px;  
}

.product {
    display: flex;
    flex-wrap: wrap; 
    align-items: center; 
    justify-content: center; 
    gap: 20px;
    max-width: 1200px;
    border: 1px solid #ddd;
    padding: 20px;  
    border-radius: 10px;
    margin: auto; 
  
}
.product.cart {
  background-color: #93abbf;
  border: 1px solid #ddd;
  border-radius:2;
  padding: 20px;
  text-align: center;
}

h1, h2 {
  color: grey;
  font-family: "americana_i4, "Courier New (monospace)";
}
.buy-now-button {
  background-color:steelblue;
}
h2 {
  color: grey;
  font-family: "Agbalumo", "Courier New (monospace)";
}
h3 {
  color: whitesmoke;
  font-family: "Agbalumo", "Courier New (monospace)";
}
.empty-cart-div{
  display:flex;
  justify-content:center;
  align-items:center;
  flex-direction:column; 
}
#hero {
width:100%;
}

body {
  background-color: {{ settings.bg | default: '#ffffff' }};
  color: {{ settings.body_text | default: '#000000' }};
}
