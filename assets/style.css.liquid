:root {
  --fadeoff: left 0s 0.4s, opacity 0.4s;
  --fadeon: left 0s, opacity 0.4s;
  --bp:960px;
  --page_width: {{ settings.page_width }}px;
  --backgroundColor: {{ settings.background_color }};
  --textColor: {{ settings.textColor }};
  --linkColor: {{ settings.linkColor }};
  /* color scheme 
  color: {{ section.settings.color_schemes.text }};
  background-color: {{ section.settings.color_schemes.background }} */
}
.width {
  max-width: var(--page_width);
  width: calc(100% - 40px);

}
/*
reset 
*/
* {
  margin:0;
  padding:0;
  box-sizing:border-box;
}
img svg {
  display: block;
  width:100%;
}
/* 
header 
*/
 .header-logo {
  display: block;
 }
header {
  text-align: center;
}
@media (min-width: 960px) {
  .width {
    width: calc(100% - 80px);
  }
}
.nav-bar {
  display: flex;
  align-content: space-around;
  justify-content: space-around;
}

.header-hamburger {
  width: 32px;
  display: block;
}

.header-hamburger-bar {
  height: 2px;
  width: 100%;
  background: var(--textColor);
  display:block;
  border-radius:2px;
}

& + & {
  margin-top:5px;
}

button,
input,
select,
textarea {
  outline: none;
  border: none;
  background: transparent;
  -webkit-appearance: none;
  -moz-appearance: none;
  -ms-appearance: none;
  -o-appearance: none;
  appearance: none;
}

a {
  color: var(--linkColor);
  text-decoration: none;
  transition: color 0.3s ease;

}

a:hover {
  color: #fff;
}

body {
  font-size:100%;
  background: var(--backgroundColor);
  color: var(--textColor);
}
.image_with_text_image .overlay-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white; 
}
