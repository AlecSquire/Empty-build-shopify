:root {
  --width: {{ settings.page_width }}px;
  --fadeoff: left 0s 0.4s, opacity 0.4s;
  --fadeon: left 0s, opacity 0.4s;
  --bp:960px;
  --backgroundColor: {{ settings.background_color }};
  --textColor: {{ settings.textColor }};
  --linkColor: {{ settings.linkColor }};
  /* colro scheme 
  color: {{ section.settings.color_schemes.text }};
  background-color: {{ section.settings.color_schemes.background }} */
}
.width {
  max-width: var(--width);
  width: calc(100% - 40px);

}
/*
reset 
*/
* {
  margin:0;
  padding:0;
  box-sizing:border-box;
}
img svg {
  display: block;
  width:100%;
}
/* 
header 
*/
 .header-logo {
  display: block;
 }
header {
  text-align: center;
}
@media (min-width: 960px) {
  .width {
    width: calc(100% - 80px);
  }
}
.nav-bar {
  display: flex;
  align-content: space-around;
  justify-content: space-around;
}

a {
  color: var(--linkColor);
  text-decoration: none;
  transition: color 0.3s ease;

}

a:hover {
  color: #fff;
}

body {
  font-size:100%;
  background: var(--backgroundColor);
  color: var(--textColor);
}
