body {
  background-color: #111;
  color: #ddd;
  font-family: 'Helvetica', sans-serif;
  margin: 0;
  padding: 0;
}

header {
  background-color: #333;
  padding: 1em;
  text-align: center;

}
.nav-bar {
  display: flex;
  align-content:space-around;
  justify-content:space-around;

}


h1 {
  color: #fff;
  font-size: 2em;
  margin: 0;
}

main {
  padding: 2em;
}

p {
  line-height: 1.6;
}

a {
  color: #6c757d;
  text-decoration: none;
  transition: color 0.3s ease;
}

a:hover {
  color: #fff;
}

footer {
  background-color: #333;
  color: #6c757d;
  padding: 1em;
  text-align: center;
  position: fixed;
  bottom: 0;
  width: 100%;
}
.product-container {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 20px;
  padding: 20px;
  max-width: 1200px;
  margin: 0 auto;
}
.product {
  background-color: white;
  border: 1px solid #ddd;
  border-radius:2;
  padding: 20px;
  text-align: center;

}





